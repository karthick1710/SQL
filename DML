SQL> CREATE TABLE exam  (   examID NUMBER ,    studentID NUMBER REFERENCES student(studentID),   department CHAR(5) NOT NULL,    mark1 NUMBER CHECK (mark1<=100 and mark1>=0),   mark2 NUMBER CHECK (mark2<=100 and mark2>=0),   mark3 NUMBER CHECK (mark3<=100 and mark3>=0),   mark4 NUMBER CHECK (mark4<=100 and mark4>=0),   mark5 NUMBER CHECK (mark5<=100 and mark5>=0),   total NUMBER,    average NUMBER,   grade CHAR(1)  );

Table created.

SQL> INSERT INTO exam(examid, studentid, department, mark1, mark2, mark3, mark4, mark5)  VALUES (2222,101,'IT',98,87,83,99,87);

1 row created.

SQL> INSERT INTO exam(examid, studentid, department, mark1, mark2, mark3, mark4,mark5)  VALUES(3333,104,'IT',99,82,84,89,100);

1 row created.

SQL> INSERT INTO exam(examid, studentid, department, mark1, mark2, mark3, mark4,mark5)  VALUES(3333,104,'IT',99,82,84,89,100);

1 row created.

